<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <gazebo>
        <plugin name="ign_ros2_control::IgnitionROS2ControlPlugin" filename="ign_ros2_control-system">
            <parameters>$(find impedance_control)/config/controllers.yaml</parameters>
        </plugin>
        <!-- <plugin name="gazebo_ros2_force_torque" filename="libignition_ros2_sensors.so">
            <ros>
                <namespace>/force_torque</namespace>
            </ros>
        </plugin> -->
    </gazebo>

    <gazebo reference="link1">
        <kp>1000000.0</kp>
        <kd>100.0</kd>
        <mu1>30.0</mu1>
        <mu2>30.0</mu2>
        <material>Gazebo/Red</material>
    </gazebo>
    <gazebo reference="link1">
        <material>Gazebo/Gray</material>
    </gazebo>

    <gazebo reference="link2">
        <kp>1000000.0</kp>
        <kd>100.0</kd>
        <mu1>30.0</mu1>
        <mu2>30.0</mu2>
        <material>Gazebo/Red</material>
    </gazebo>
    <gazebo reference="link2">
        <material>Gazebo/Gray</material>
    </gazebo>

    <gazebo reference="link3">
        <kp>1000000.0</kp>
        <kd>100.0</kd>
        <mu1>30.0</mu1>
        <mu2>30.0</mu2>
        <material>Gazebo/Red</material>
    </gazebo>
    <gazebo reference="link3">
        <material>Gazebo/Gray</material>
    </gazebo>

    <gazebo reference="joint1">
        <sensor name="force_torque" type="force_torque">
            <update_rate>30</update_rate>
            <topicName>/joint1/force_torque</topicName>
        </sensor>
    </gazebo>

    <gazebo reference="joint2">
        <sensor name="force_torque" type="force_torque">
            <update_rate>30</update_rate>
            <topicName>/joint2/force_torque</topicName>
        </sensor>
    </gazebo>

    <gazebo reference="joint3">
        <sensor name="force_torque" type="force_torque">
            <update_rate>30</update_rate>
            <topicName>/joint3/force_torque</topicName>
        </sensor>
    </gazebo>
</robot>
